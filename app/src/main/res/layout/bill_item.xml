<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/bill_item_name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="dfgfdgfdgdfgdfgdfgdfgfdgdfgdfgfdsgsfdgdfsg"
        app:layout_constraintEnd_toStartOf="@id/bill_item_count"
        android:layout_margin="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="5dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/bill_item_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/bill_item_name"
        app:layout_constraintTop_toTopOf="@id/bill_item_name"
        app:layout_constraintEnd_toStartOf="@id/bill_item_price"
        app:layout_constraintBottom_toBottomOf="@id/bill_item_name"
        android:gravity="center"
        tools:text="555"
        />

    <TextView
        android:id="@+id/bill_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/bill_item_count"
        app:layout_constraintTop_toTopOf="@id/bill_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bill_item_name"
        android:gravity="center"
        tools:text="555"
        />



</androidx.constraintlayout.widget.ConstraintLayout>